{{!< default}}

{{> "menu-logo" }}

<section class="blog container">

  <div class="medium-8 medium-offset-2">

    <header class="header">
      Latest Posts
    </header>

    {{> "separator"}}

    <div class="posts">
      {{#foreach posts}}
          <article class="{{post_class}}">

            <header class="header post-head">
              <h1 class="post-title"><a href="{{ url }}">{{ title }}</a></h1>
            </header>

            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>

            <section class="post-excerpt">
              <p>{{excerpt words="80"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
            </section>

            <footer class="post-meta">
              <div class="tags">
                {{tags separator=" &bullet; " prefix="Talking about: " }}
              </div>
            </footer>

          </article>
      {{/foreach}}

      {{> "separator"}}

      <article class="post text-right">
        <header class="header post-head">
          <h3 class="post-title"><a href="/page/2">Older Posts &gt;</a></h3>
        </header>
      </article>
    </div>

  </div>

</section>



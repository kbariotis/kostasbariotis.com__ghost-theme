{{!< default}}

{{#post}}

  {{> "menu"}}

  <main class="blog container" role="main">

    <div class="medium-8 medium-offset-2">

      <header class="header post-head ">
        <h1 class="post-title">{{title}}</h1>
      </header>

      <section class="post-meta">
        <div class="row">
          <div class="medium-6">
            <ul class="list-inline">
              <li>
                {{#if @blog.logo}}
                  {{#author}}
                    <a class="author-avatar" href="{{@blog.url}}">
                      <img src="{{@blog.logo}}" alt="{{name}}"/>
                    </a>
                  {{/author}}
                {{/if}}
              </li>
              <li>
                {{#author}}
                  <div class="author-name">
                    {{name}}
                  </div>
                  <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM
          YYYY"}}</time>
                {{/author}}
              </li>
            </ul>
          </div>
          <div class="medium-6">
            <ul class="tags list-inline text-right">
              {{#foreach tags}}
                <li>
                  <a href="{{ url }}">{{ name }}</a>
                </li>
              {{/foreach}}
            </ul>
          </div>
        </div>
      </section>

      <div class="separator">
        <div class="first-level">
          <div class="second-level">
            <div class="third-level"></div>
          </div>
        </div>
      </div>

      <article class="main-post {{post_class}}">

        <section class="post-content">
          {{content}}
        </section>

        <div class="separator">
          <div class="first-level">
            <div class="second-level">
              <div class="third-level"></div>
            </div>
          </div>
        </div>

        <footer class="post-footer">
          <section class="share text-center">
            <ul class="share-buttons list-inline">
              <li>
                <b>Share this post on</b>
              </li>
              <li class="link-twitter">
                <a class="icon-twitter"
                   href="https://twitter.com/share?text={{encode title}}%20via%20@kbariotis&amp;url={{url
                   absolute="true"}}"
                   onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                  <span>Twitter</span>
                </a>
              <li class="link-facebook">
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                   onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                  <span>Facebook</span>
                </a>
              </li>
              <li class="link-google-plus">
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                  <span>Google+</span>
                </a>
              </li>
            </ul>
          </section>
        </footer>

        <header class="header">
          <h2>Comments</h2>
        </header>
        <section class="post-comments">
          <div id="disqus_thread"></div>
          <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'kostasbariotis'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function () {
              var dsq = document.createElement('script');
              dsq.type = 'text/javascript';
              dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          </script>
          <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by
            Disqus.</a></noscript>
        </section>

      </article>

    </div>
  </main>

{{/post}}
